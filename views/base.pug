block variables 
- const title = "Payday Cards | Unboring"
- const description = "One super-card for every need."
- const image = "https://payday-card-unboring.vercel.app/paydayThumb.png"
- const site = ""
- const maskIconColor = "#5bbad5"
- const TileColor = "#2b5797"
- const themeColor = "#ffffff"


doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    base(href="/")

    title #{title}

    meta(name="description" content=description)

    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    //- link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
    //- link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
    link(rel="icon" type="image/x-icon" href="/favicon.ico")
    link(rel="manifest" href="/site.webmanifest" crossorigin="use-credentials")
    link(rel="mask-icon" href="/safari-pinned-tab.svg" color=maskIconColor)
    meta(name="msapplication-TileColor" content=TileColor)
    meta(name="theme-color" content=themeColor)

    meta(property="og:type" content="website")
    meta(property="og:title" content=title)
    meta(property="og:description" content=description)
    meta(property="og:image" content=image ? image : "")

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@ourpaydayHQ">
    <meta name="twitter:title" content="Payday Cards | Unboring">
    <meta name="twitter:description" content="One super-card for every need.">
    <meta name="twitter:image" content="https://payday-card-unboring.vercel.app/paydayThumb.png">

    //- link(href="https://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet")
    link(href="/type.css" rel="stylesheet")


  body
    style
      include ../public/main.css

    //- include ./partials/preloader
    //- include ./partials/header
    .content#smooth-wrapper(data-template=template)
      block content

      if template === "home"
        //- include ./partials/footer
    .home__card
      section.home__card__master
        //- p.home__card__body Get a virtual card, tailored to your needs.
        .home__card__headings
          h1.home__card__heading MasterCard
          h1.home__card__heading Goody Card
          h1.home__card__heading the AJ Card

        .home__card__illustration
          include partials/lock
        .home__download 
          include partials/store


      section.home__card__goody
        //- p.home__card__body Get a virtual card, tailored to your needs.
        .home__card__illustration

      section.home__card__aj
        //- p.home__card__body Get a virtual card, tailored to your needs.
        .home__card__illustration
    .card__wrapper
      figure#card   
        img(src="images/black.svg" alt="")

    script.
      window.preloadables = !{JSON.stringify(preloadables).replace(/<\//g, "<\\/")}
    script(src="main.js") 