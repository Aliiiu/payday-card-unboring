extends ../base.pug 

block variables
  - var template = "home"

block content 
  main.home
    .home__wrapper 
      .home__download 
        include ../partials/store

    section.home__hero 
      .home__hero__cards
        <svg width="607" height="641" viewBox="0 0 607 641" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="236.041" y="-11.5331" width="595.213" height="322.706" rx="29.2826" transform="rotate(50.071 236.041 -11.5331)" fill="#FF9E00"/>
        </svg>
        <svg width="637" height="611" viewBox="0 0 637 611" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="200.174" y="-12" width="595.213" height="322.706" rx="29.2826" transform="rotate(41.1083 200.174 -12)" fill="#FF0115"/>
        </svg>
        <svg width="653" height="575" viewBox="0 0 653 575" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="166.18" y="-11" width="595.213" height="322.706" rx="29.2826" transform="rotate(33.3014 166.18 -11)" fill="#000000"/>
        </svg>
      h2.home__hero__heading Making money is no easy feat,
        span so why make spending it a defeat?
      .home__download 
        include ../partials/store

    section.home__mall
      h2.home__mall__heading Make the world your mall.
      p.home__mall__body Shop at any store across the world, from the comfort of your own couch. No more limits or boundaries, just pure shopping bliss.
      .home__mall__illustration
        include ../partials/mall

    section.home__super 
      h2.home__super__heading One super-card for every need.
      p.home__super__body Pay for all your favorite services, from Netflix to Spotify to Slack, and everything in between. We’ve got you covered.
      .home__super__illustration
        include ../partials/super

    section.home__lock 
      h2.home__lock__heading Your cards, your rules.
      p.home__lock__body Our Card Lock feature lets you lock and disable your cards whenever they're not being used, giving you the power to decide when and how your cards are active. 
      .home__lock__illustration
        include ../partials/lock

    div.home__card
      section.home__card__master
        p.home__card__body Our Cards
        h1.home__card__heading MasterCard
        .home__card__illustration
          include ../partials/lock
        .home__download 
          include ../partials/store

      section.home__card__goody
        p.home__card__body Our Cards
        h1.home__card__heading Goody Card
        .home__card__illustration
          include ../partials/lock
        .home__download 
          include ../partials/store

      section.home__card__aj
        p.home__card__body Our Cards
        h1.home__card__heading the AJ Card
        .home__card__illustration
          include ../partials/lock
        .home__download 
          include ../partials/store

    div.home__footer
      h2.home__footer__heading Borderless payments, so you bother less.
      .home__download 
        include ../partials/store
      figure.home__footer__mockup
        img(src="images/mockup.png", alt="")
      .home__footer__foot 
        h3.home__footer__text Made w ❤️ for PayDay.
        p.home__footer__body (c) 2023 AJ X Goody. All Rights Reserved, all Wrongs Reversed.
        h3.home__footer__text Share on Twitter
        h3.home__footer__text &nearr;

      










       


